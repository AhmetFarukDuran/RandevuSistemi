@model RandevuSistemi.Models.Randevu
@{
    ViewBag.Title = "RandevuGetir";
     Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }
    </style>
</head>
<body>
    <h2>Randevu Güncelleme Sayfası</h2>
    <br />
    @using (Html.BeginForm("RandevuGüncelle", "Randevu", FormMethod.Post))
    {
        <label for="RId">RANDEVU ID</label>
        @Html.TextBoxFor(x => x.RandevuId, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="KId">KİŞİ ID</label>
        @Html.TextBoxFor(x => x.KisiId, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Ad">AD</label>
        @Html.TextBoxFor(x => x.Kisiler.KisiAd, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Soyad">SOYAD</label>
        @Html.TextBoxFor(x => x.Kisiler.KisiSoyad, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="PNo">POLİÇE NO</label>
        @Html.TextBoxFor(x => x.Kisiler.PoliceNo, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="TcNo">TC KİMLİ NO</label>
        @Html.TextBoxFor(x => x.Kisiler.TcNo, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Tel">TELEFON</label>
        @Html.TextBoxFor(x => x.Kisiler.Tel, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Il">İL</label>
        @Html.TextBoxFor(x => x.Kisiler.Il, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Ilce">İLÇE</label>
        @Html.TextBoxFor(x => x.Kisiler.Ilce, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label for="Tarih">TARİH</label>
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Randevu İsteği Onayla</button>
    }
</body>
</html>
